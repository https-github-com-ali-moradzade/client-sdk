{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dest",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "dest/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "include": [
    "index.ts",
    "src/**/*.ts"
  ]
}
